#!/bin/bash

set -x

cd "/pkg/src/dcos-ui"

run_npm() {
    local extra="--proxy http://web-proxy.europe.hp.com:8080"
    npm $extra $*
}

run_npm install -g npm@3.9.1

run_npm install

echo "module.exports = {};" > ./src/js/config/Config.dev.js
run_npm run scaffold

run_npm run build

cp -r dist/ "$PKG_PATH"/usr
